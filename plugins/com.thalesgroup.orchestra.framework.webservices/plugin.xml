<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
<extension
      point="org.eclipse.equinox.http.registry.servlets">
   <servlet
         alias="/services"
         class="org.apache.axis.transport.http.AxisServlet"
         httpcontextId="com.thalesgroup.orchestra.framework.httpcontext"
         load-on-startup="true">
   </servlet>
   <servlet
         alias="/ping"
         class="com.thalesgroup.orchestra.framework.webservices.PingServlet">
   </servlet>
</extension>
<extension
      point="org.eclipse.equinox.http.registry.httpcontexts">
   <httpcontext
         id="com.thalesgroup.orchestra.framework.httpcontext">
      <resource-mapping
            path="/baseResource">
      </resource-mapping>
   </httpcontext>
</extension>

</plugin>
